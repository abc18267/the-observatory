---
import PageLayout from '../layouts/PageLayout.astro';
import WordTrigger from '../components/hidden/WordTrigger.svelte';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects'))
  .filter((p) => p.data.featured)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const posts = (await getCollection('blog'))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
---

<PageLayout title="Home" description="A portfolio hiding an entire world of discovery">
  <!-- Hero -->
  <section class="py-16 md:py-24">
    <p class="mb-4 font-mono text-sm text-star-blue">Hello, I'm</p>
    <h1 class="font-display text-4xl font-bold leading-tight text-nebula-50 md:text-6xl">
      An explorer who builds things.
    </h1>
    <p class="mt-6 max-w-2xl text-lg text-nebula-400">
      I make software that maps, visualizes, and sonifies the world around us.
      Some of my best work is <WordTrigger client:idle word="hidden in plain sight" gameId="nebula-painter" />.
    </p>
    <div class="mt-8 flex gap-4">
      <a
        href="/projects"
        class="rounded-lg bg-star-blue/10 px-6 py-3 text-sm font-medium text-star-blue transition-colors hover:bg-star-blue/20"
      >
        View Projects
      </a>
      <a
        href="/about"
        class="rounded-lg border border-nebula-600 px-6 py-3 text-sm font-medium text-nebula-300 transition-colors hover:border-nebula-500 hover:text-nebula-100"
      >
        About Me
      </a>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="py-16">
    <h2 class="mb-8 font-display text-2xl font-bold text-nebula-100">Featured Projects</h2>
    <div class="grid gap-6 md:grid-cols-2">
      {projects.map((project) => (
        <a
          href={`/projects/${project.id}`}
          class="group rounded-xl border border-nebula-700/50 bg-nebula-900/50 p-6 transition-all hover:border-nebula-600 hover:bg-nebula-800/50"
        >
          <div class="mb-3 flex flex-wrap gap-2">
            {project.data.tags.map((tag) => (
              <span class="rounded-full bg-nebula-800 px-2.5 py-0.5 text-xs text-nebula-400">
                {tag}
              </span>
            ))}
          </div>
          <h3 class="font-display text-lg font-semibold text-nebula-100 transition-colors group-hover:text-star-blue">
            {project.data.title}
          </h3>
          <p class="mt-2 text-sm text-nebula-400">{project.data.description}</p>
        </a>
      ))}
    </div>
  </section>

  <!-- Recent Posts -->
  <section class="py-16">
    <h2 class="mb-8 font-display text-2xl font-bold text-nebula-100">Recent Writing</h2>
    <div class="flex flex-col gap-6">
      {posts.map((post) => (
        <a
          href={`/blog/${post.id}`}
          class="group flex items-start justify-between gap-4 rounded-lg border border-nebula-700/50 bg-nebula-900/30 p-6 transition-all hover:border-nebula-600 hover:bg-nebula-800/30"
        >
          <div>
            <h3 class="font-display text-lg font-semibold text-nebula-100 transition-colors group-hover:text-star-blue">
              {post.data.title}
            </h3>
            <p class="mt-2 text-sm text-nebula-400">{post.data.description}</p>
          </div>
          <time class="shrink-0 text-xs text-nebula-500" datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
          </time>
        </a>
      ))}
    </div>
    <a href="/blog" class="mt-6 inline-block text-sm text-nebula-400 transition-colors hover:text-star-blue">
      All posts &rarr;
    </a>
  </section>
</PageLayout>
