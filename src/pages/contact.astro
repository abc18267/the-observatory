---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Contact" description="Get in touch. I'd love to hear from you">
  <section class="py-16">
    <h1 class="font-display text-4xl font-bold text-nebula-50 md:text-5xl">Contact</h1>
    <p class="mt-4 max-w-2xl text-lg text-nebula-400">
      Got a question, idea, or just want to say hello? I'd love to hear from you.
    </p>
  </section>

  <div class="grid gap-12 pb-16 md:grid-cols-2">
    <!-- Contact Form -->
    <form class="flex flex-col gap-6" action="#" method="POST">
      <div>
        <label for="name" class="mb-2 block text-sm font-medium text-nebula-300">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full rounded-lg border border-nebula-700 bg-nebula-900 px-4 py-3 text-sm text-nebula-100 placeholder-nebula-500 transition-colors focus:border-star-blue focus:outline-none"
          placeholder="Your name"
        />
      </div>
      <div>
        <label for="email" class="mb-2 block text-sm font-medium text-nebula-300">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full rounded-lg border border-nebula-700 bg-nebula-900 px-4 py-3 text-sm text-nebula-100 placeholder-nebula-500 transition-colors focus:border-star-blue focus:outline-none"
          placeholder="you@example.com"
        />
      </div>
      <div>
        <label for="message" class="mb-2 block text-sm font-medium text-nebula-300">Message</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="w-full rounded-lg border border-nebula-700 bg-nebula-900 px-4 py-3 text-sm text-nebula-100 placeholder-nebula-500 transition-colors focus:border-star-blue focus:outline-none"
          placeholder="What's on your mind?"
        ></textarea>
      </div>
      <button
        type="submit"
        class="self-start rounded-lg bg-star-blue/10 px-8 py-3 text-sm font-medium text-star-blue transition-colors hover:bg-star-blue/20"
      >
        Send Message
      </button>
    </form>

    <!-- Links -->
    <div class="flex flex-col gap-6">
      <div class="rounded-xl border border-nebula-700/50 bg-nebula-900/50 p-6">
        <h2 class="mb-4 font-display text-lg font-semibold text-nebula-100">Find Me Online</h2>
        <ul class="flex flex-col gap-3">
          <li>
            <a href="https://github.com" class="text-sm text-nebula-400 transition-colors hover:text-star-blue" target="_blank" rel="noopener noreferrer">
              GitHub
            </a>
          </li>
          <li>
            <a href="https://twitter.com" class="text-sm text-nebula-400 transition-colors hover:text-star-blue" target="_blank" rel="noopener noreferrer">
              Twitter / X
            </a>
          </li>
          <li>
            <a href="https://linkedin.com" class="text-sm text-nebula-400 transition-colors hover:text-star-blue" target="_blank" rel="noopener noreferrer">
              LinkedIn
            </a>
          </li>
        </ul>
      </div>

      <div class="rounded-xl border border-nebula-700/50 bg-nebula-900/50 p-6">
        <h2 class="mb-4 font-display text-lg font-semibold text-nebula-100">Email</h2>
        <a href="mailto:hello@example.com" class="text-sm text-star-blue transition-colors hover:text-star-blue/80">
          hello@example.com
        </a>
      </div>
    </div>
  </div>
</PageLayout>
