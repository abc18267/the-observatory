---
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<PageLayout title="Blog" description="Notes on building, creating, and exploring">
  <section class="py-16">
    <h1 class="font-display text-4xl font-bold text-nebula-50 md:text-5xl">Blog</h1>
    <p class="mt-4 max-w-2xl text-lg text-nebula-400">
      Notes on building, creating, and exploring.
    </p>
  </section>

  <section class="flex flex-col gap-6 pb-16">
    {posts.map((post) => (
      <a
        href={`/blog/${post.id}`}
        class="group flex items-start justify-between gap-6 rounded-xl border border-nebula-700/50 bg-nebula-900/30 p-6 transition-all hover:border-nebula-600 hover:bg-nebula-800/30"
      >
        <div>
          <div class="mb-2 flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <span class="rounded-full bg-nebula-800 px-2.5 py-0.5 text-xs text-nebula-400">
                {tag}
              </span>
            ))}
          </div>
          <h2 class="font-display text-xl font-semibold text-nebula-100 transition-colors group-hover:text-star-blue">
            {post.data.title}
          </h2>
          <p class="mt-2 text-sm text-nebula-400">{post.data.description}</p>
        </div>
        <time class="shrink-0 text-xs text-nebula-500" datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
        </time>
      </a>
    ))}
  </section>
</PageLayout>
